{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=smartroutine.db"
  },
  "Jwt": {
    "Issuer": "SmartRoutine.API",
    "Audience": "SmartRoutine.Client",
    "SecretKey": "SuperSecretKey123456789012345678901!"
  },
  "ApiSettings": {
    "ApiKey": "",
    "RateLimitRequests": 30,
    "RateLimitWindow": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "SmartRoutine": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Environment": "Development",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  }
} 